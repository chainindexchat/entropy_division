{
  "name": "frontend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rm -rf node_modules pnpm-lock.yaml && find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'pnpm-lock.yaml' -exec rm -f {} +",
    "reinstall": "pnpm run clean && pnpm store prune && pnpm install",
    "shadcn:add": "npx shadcn@latest add -c apps/dapp",
    "shadcn:add:url": "npx shadcn@latest add -c apps/dapp"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@payloadcms/ui": "3.60.0",
      "@payloadcms/db-postgres": "3.60.0",
      "@payloadcms/next": "3.60.0",
      "@payloadcms/richtext-lexical": "3.60.0",
      "payload": "3.60.0",
      "@esbuild/darwin-arm64": "0.25.12",
      "@esbuild/darwin-x64": "0.25.12",
      "@esbuild/linux-x64": "0.25.12",
      "@esbuild/linux-arm64": "0.25.12",
      "@esbuild/win32-x64": "0.25.12",
      "@esbuild/win32-arm64": "0.25.12",
      "@midnight-ntwrk/compact-runtime>@midnight-ntwrk/onchain-runtime": "^0.3.0",
      "@midnight-ntwrk/zswap": "4.0.0",
      "@smithy/types": "4.9.0"
    },
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ],
    "patchedDependencies": {
      "isomorphic-ws@5.0.0": "patches/isomorphic-ws@5.0.0.patch"
    }
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.9.0",
    "@midnight-ntwrk/dapp-connector-api": "3.0.0",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "2.0.2",
    "@midnight-ntwrk/midnight-js-fetch-zk-config-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-network-id": "2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-types": "2.0.2",
    "@midnight-ntwrk/midnight-js-utils": "2.0.2",
    "@midnight-ntwrk/wallet": "5.0.0",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "@midnight-ntwrk/wallet-sdk-address-format": "2.0.0",
    "@midnight-ntwrk/zswap": "4.0.0",
    "fp-ts": "^2.16.1",
    "io-ts": "^2.2.20",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "rxjs": "^7.8.1",
    "shadcn": "^3.4.2",
    "ws": "^8.18.1"
  }
}
