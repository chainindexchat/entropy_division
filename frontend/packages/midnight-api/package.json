{
  "name": "@meshsdk/midnight-setup",
  "version": "0.0.1",
  "description": "Complete setup for building Midnight Network dApps - includes smart contract, API, and wallet integration",
  "author": "MeshJS Team (https://github.com/MeshJS)",
  "homepage": "https://github.com/MeshJS/midnight-setup",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeshJS/midnight-setup.git"
  },
  "bugs": {
    "url": "https://github.com/MeshJS/midnight-setup/issues"
  },
  "keywords": [
    "midnight",
    "midnight-network",
    "blockchain",
    "smart-contracts",
    "dapp",
    "web3",
    "compact",
    "meshjs",
    "midnight-dapp",
    "wallet-integration"
  ],
  "packageManager": "pnpm@9.15.4",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "fetch-zk-params.sh"
  ],
  "scripts": {
    "lint": "eslint src",
    "prepare-local-env": "RUN_STANDALONE='true' NODE_OPTIONS=--experimental-vm-modules jest -t 'prepare local env' --detectOpenHandles --forceExit",
    "test-api": "DEBUG='testcontainers' NODE_OPTIONS=--experimental-vm-modules jest  --detectOpenHandles --forceExit",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "prepublishOnly": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.9.0",
    "@midnight-ntwrk/midnight-js-contracts": "2.0.2",
    "@midnight-ntwrk/midnight-js-types": "2.0.2",
    "@midnight-setup/midnight-setup-contract": "workspace:*",
    "pino": "^8.16.1",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "ws": "8.17.1"
  },
  "peerDependencies": {
    "@midnight-ntwrk/dapp-connector-api": "^3.0.0",
    "@midnight-ntwrk/midnight-js-fetch-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.2"
  },
  "devDependencies": {
    "@types/ws": "^8.5.9",
    "allure-commandline": "^2.28.0",
    "allure-jest": "^2.15.1",
    "allure-js-commons": "^2.15.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.3"
  }
}
